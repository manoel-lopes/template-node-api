{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:test": "cross-env NODE_ENV=test tsx watch --env-file .env.test src/main/server.ts",
    "dev": "cross-env NODE_ENV=development tsx watch --env-file .env.development src/main/server.ts",
    "start": "cross-env NODE_ENV=production node --env-file .env.production dist/main/server.js",
    "build": "tsup",
    "lint": "eslint --ext=.ts src --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky || true && cross-env-shell chmod ug+x .husky/*",
    "postinstall": "husky || true && cross-env-shell chmod ug+x .husky/*",
    "test:dir": "cross-env NODE_ENV=test dotenv -e .env.testing -- vitest --run --silent --reporter verbose --dir",
    "test:unit": "vitest --run --passWithNoTests --silent --reporter verbose",
    "test:int": "cross-env NODE_ENV=test dotenv -e .env.testing -- vitest --run --passWithNoTests --no-threads --silent --reporter verbose --dir src/main/routes",
    "test:staged": "vitest related --run",
    "test:ci": "vitest --run --silent --coverage && tsx check-coverage",
    "migrate:dev": "cross-env NODE_ENV=development dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:test": "cross-env NODE_ENV=test dotenv -e .env.testing -- npx prisma migrate dev",
    "migrate:dev:reset": "cross-env NODE_ENV=development dotenv -e .env.development -- npx prisma migrate reset",
    "migrate:test:reset": "cross-env NODE_ENV=test dotenv -e .env.testing -- npx prisma migrate reset",
    "db:up": "docker-compose --env-file .env.testing -f docker-compose.yml up --build --remove-orphans -d"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@prisma/client": "^5.15.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "cuid": "^3.0.0",
    "express": "^4.19.2",
    "fastify": "^4.27.0",
    "ioredis": "^5.4.1",
    "tsx": "^4.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prisma": "^5.15.0",
    "supertest": "^7.0.0",
    "tsup": "^8.1.0",
    "typescript": "5.1.6",
    "vite": "^5.2.12",
    "vitest": "^1.6.0"
  }
}
