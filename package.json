{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node --env-file .env dist/main/server.js",
    "start:dev": "tsx watch --env-file .env.development src/main/server.ts",
    "start:test": "tsx watch --env-file .env.test src/main/server.ts",
    "build": "tsup",
    "lint": "eslint src --fix",
    "lint:staged": "lint-staged",
    "test:unit": "vitest --run --passWithNoTests --silent --reporter verbose",
    "test:unit:watch": "vitest --passWithNoTests --silent --reporter verbose",
    "test:e2e": "vitest --run --silent --reporter verbose --dir src/main/routes",
    "test:int": "vitest --run --passWithNoTests --no-threads --silent --reporter verbose --dir src/main/routes",
    "test:staged": "vitest related --run",
    "test:ci": "vitest --run --silent --coverage",
    "test:dir": "vitest --run --silent --reporter verbose --dir",
    "migrate:dev:up": "dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:dev:down": "dotenv -e .env.development -- npx prisma migrate reset",
    "migrate:test:up": "dotenv -e .env.test -- npx prisma migrate dev",
    "migrate:test:down": "dotenv -e .env.test -- npx prisma migrate reset",
    "db:up": "docker-compose up --build -d"
  },
  "dependencies": {
    "@fastify/cors": "10.0.2",
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.1",
    "@prisma/client": "6.3.0",
    "@vitest/eslint-plugin": "1.1.25",
    "dotenv-cli": "8.0.0",
    "fastify": "5.2.1",
    "fastify-type-provider-zod": "4.0.2",
    "ioredis": "5.4.2",
    "tsx": "4.19.2",
    "uuidv7": "1.0.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "0.6.1",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/parser": "8.22.0",
    "@vitest/coverage-v8": "3.0.4",
    "eslint": "9.19.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "neostandard": "0.12.0",
    "prisma": "6.3.0",
    "supertest": "7.0.0",
    "tsup": "8.3.6",
    "typescript": "5.7.3",
    "vite": "6.0.11",
    "vitest": "3.0.4"
  }
}
