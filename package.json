{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node --env-file .env dist/main/server.js",
    "start:dev": "tsx --env-file .env.development --watch src/main/server.ts",
    "start:test": "tsx --env-file .env.test --watch src/main/server.ts",
    "build": "tsup",
    "lint": "eslint src --fix",
    "lint:staged": "lint-staged",
    "test:unit": "vitest --run --passWithNoTests --silent --reporter verbose",
    "test:unit:watch": "vitest --passWithNoTests --silent --reporter verbose",
    "test:e2e": "vitest --run --silent --reporter verbose --dir src/main/routes",
    "test:int": "vitest --run --passWithNoTests --pool=forks --silent --reporter verbose --dir src/main/routes",
    "test:staged": "vitest related --run",
    "test:ci": "vitest --run --silent --coverage",
    "test:dir": "vitest --run --silent --reporter verbose --dir",
    "db:up": "docker-compose up --build -d",
    "db:up:dev": "dotenv -e .env.development -- docker-compose -p dev -f docker-compose.development.yml up --build -d",
    "db:up:test": "dotenv -e .env.test -- docker-compose -p test -f docker-compose.test.yml up --build -d",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/cors": "11.0.0",
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.2",
    "@prisma/client": "6.5.0",
    "@vitest/eslint-plugin": "1.1.38",
    "dotenv-cli": "8.0.0",
    "fastify": "5.2.1",
    "fastify-type-provider-zod": "4.0.2",
    "ioredis": "5.6.0",
    "tsx": "4.19.3",
    "uuidv7": "1.0.2",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.13.10",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-istanbul": "3.0.9",
    "eslint": "9.22.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "neostandard": "0.12.1",
    "prisma": "6.5.0",
    "supertest": "7.0.0",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.27.0",
    "vite": "6.2.2",
    "vitest": "3.0.9"
  }
}