{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node --env-file .env dist/main/server.js",
    "start:dev": "tsx --env-file .env.development --watch src/main/server.ts",
    "build": "tsup",
    "migrate": "dotenv -e .env -- prisma migrate dev",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- prisma migrate dev",
    "migrate:reset": "dotenv -e .env -- prisma migrate reset",
    "migrate:reset:dev": "dotenv -e .env.development -- prisma migrate reset",
    "migrate:reset:test": "dotenv -e .env.test -- prisma migrate reset",
    "test:unit": "vitest --run --passWithNoTests --silent --reporter verbose",
    "test:unit:watch": "vitest --passWithNoTests --silent --reporter verbose",
    "test:e2e": "vitest --run --silent --reporter verbose --dir src/main/routes",
    "test:ci": "vitest --run --silent --coverage",
    "test:dir": "vitest --run --silent --reporter verbose --dir",
    "db:up": "docker-compose up --build -d",
    "test:staged": "vitest related --run",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --fix",
    "lint:staged": "lint-staged",
    "db:up:dev": "dotenv -e .env.development -- docker-compose -p dev -f docker-compose.development.yml up --build -d",
    "db:up:test": "dotenv -e .env.test -- docker-compose -p test -f docker-compose.test.yml up --build -d",
    "prepare": "husky"
  },
  "prisma": {
    "schema": "./prisma"
  },
  "dependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/swagger": "9.5.1",
    "@fastify/swagger-ui": "5.2.3",
    "@prisma/client": "6.11.1",
    "@vitest/eslint-plugin": "1.3.4",
    "dotenv-cli": "8.0.0",
    "fastify": "5.4.0",
    "fastify-type-provider-zod": "5.0.2",
    "ioredis": "5.6.1",
    "tsx": "4.20.3",
    "uuidv7": "1.0.2",
    "zod": "4.0.4"
  },
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "24.0.13",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-istanbul": "3.2.4",
    "eslint": "9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "neostandard": "0.12.2",
    "prisma": "6.11.1",
    "supertest": "7.1.3",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0",
    "vite": "7.0.4",
    "vitest": "3.2.4"
  }
}