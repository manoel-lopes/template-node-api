{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node --env-file .env dist/main/server.js",
    "start:dev": "tsx --env-file .env.development --watch src/main/server.ts",
    "start:test": "tsx --env-file .env.test --watch src/main/server.ts",
    "build": "tsup",
    "lint": "eslint src --fix",
    "lint:staged": "lint-staged",
    "test:unit": "vitest --run --passWithNoTests --silent --reporter verbose",
    "test:unit:watch": "vitest --passWithNoTests --silent --reporter verbose",
    "test:e2e": "vitest --run --silent --reporter verbose --dir src/main/routes",
    "test:int": "vitest --run --passWithNoTests --pool=forks --silent --reporter verbose --dir src/main/routes",
    "test:staged": "vitest related --run",
    "test:ci": "vitest --run --silent --coverage",
    "test:dir": "vitest --run --silent --reporter verbose --dir",
    "migrate:dev:make": "dotenv -e .env.development -- npx drizzle-kit generate",
    "migrate:dev:up": "dotenv -e .env.development -- npx drizzle-kit migrate",
    "migrate:test:make": "dotenv -e .env.test -- npx drizzle-kit generate",
    "migrate:test:up": "dotenv -e .env.test -- npx drizzle-kit migrate",
    "db:up": "docker-compose up --build -d"
  },
  "dependencies": {
    "@fastify/cors": "11.0.0",
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.2",
    "@vitest/eslint-plugin": "1.1.37",
    "dotenv-cli": "8.0.0",
    "drizzle-orm": "0.40.0",
    "fastify": "5.2.1",
    "fastify-type-provider-zod": "4.0.2",
    "ioredis": "5.6.0",
    "tsx": "4.19.3",
    "uuidv7": "1.0.2",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-istanbul": "3.0.8",
    "drizzle-kit": "0.30.5",
    "eslint": "9.22.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "neostandard": "0.12.1",
    "supertest": "7.0.0",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "typescript-eslint": "8.26.1",
    "vite": "6.2.1",
    "vitest": "3.0.8"
  }
}
